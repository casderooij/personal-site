{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "bundler"
  },
  "include": ["assets/**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
